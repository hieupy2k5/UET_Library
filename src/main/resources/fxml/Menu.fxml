<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="850.0" prefWidth="1180.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.uet_library.Controllers.MenuController">
  <left>
    <VBox alignment="TOP_CENTER" nodeOrientation="LEFT_TO_RIGHT" prefHeight="200.0" style="-fx-background-color: #404040;" BorderPane.alignment="CENTER">
      <children>
            <VBox fx:id="Clock" prefHeight="200.0" prefWidth="100.0">
               <VBox.margin>
                  <Insets bottom="50.0" top="50.0" />
               </VBox.margin>
            </VBox>
        <Button fx:id="button_Home" mnemonicParsing="false" onAction="#loadHomeView" prefHeight="50.0" prefWidth="200.0" style="-fx-text-fill: #f0f0f0; ;" styleClass="bt" stylesheets="@../Styles/main.css" text="Home" textAlignment="JUSTIFY">
          <opaqueInsets>
            <Insets />
          </opaqueInsets>
          <cursor>
            <Cursor fx:constant="HAND" />
          </cursor>
          <font>
            <Font name="System Bold" size="17.0" />
          </font>
        </Button>
        <Button fx:id="button_ManagerBook" mnemonicParsing="false" onAction="#loadManagerBookView" prefHeight="50.0" prefWidth="200.0" style="-fx-text-fill: #f0f0f0;" styleClass="bt" stylesheets="@../Styles/main.css" text="Book Manager" textAlignment="JUSTIFY">
          <cursor>
            <Cursor fx:constant="HAND" />
          </cursor>
          <font>
            <Font name="System Bold" size="17.0" />
          </font>
        </Button>
        <Button fx:id="button_BookShow" mnemonicParsing="false" onAction="#loadBookView" prefHeight="50.0" prefWidth="200.0" style="-fx-text-fill: #f0f0f0;" styleClass="bt" stylesheets="@../Styles/main.css" text="Show Book" textAlignment="JUSTIFY">
          <cursor>
            <Cursor fx:constant="HAND" />
          </cursor>
          <font>
            <Font name="System Bold" size="17.0" />
          </font>
        </Button>
        <Button fx:id="button_AddBook" mnemonicParsing="false" onAction="#loadBookAPISearchView" prefHeight="50.0" prefWidth="200.0" style="-fx-text-fill: #f0f0f0;" styleClass="bt" stylesheets="@../Styles/main.css" text="Add Book" textAlignment="JUSTIFY">
          <cursor>
            <Cursor fx:constant="HAND" />
          </cursor>
          <font>
            <Font name="System Bold" size="17.0" />
          </font>
        </Button>
      </children>
    </VBox>
  </left>
  <top>
    <HBox alignment="CENTER_RIGHT" prefHeight="50.0" style="-fx-background-color: #2b2a26;" BorderPane.alignment="TOP_RIGHT">
      <children>
        <Label fx:id="welcomeText" text="Welcome!" textFill="WHITE">
               <padding>
                  <Insets left="15.0" />
               </padding></Label>
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="button_LogOut" mnemonicParsing="false" onAction="#handleLogOut" prefHeight="40.0" prefWidth="107.0" style="-fx-text-fill: #f0f0f0;" styleClass="bt" stylesheets="@../Styles/main.css" text="Log Out" textAlignment="JUSTIFY">
          <cursor>
            <Cursor fx:constant="HAND" />
          </cursor>
          <font>
            <Font name="System Bold" size="16.0" />
          </font>
               <HBox.margin>
                  <Insets right="30.0" />
               </HBox.margin>
        </Button>
      </children>
    </HBox>
  </top>
  <center>
    <AnchorPane fx:id="contentPane" prefHeight="800.0" prefWidth="980.0" BorderPane.alignment="CENTER" />
  </center>
</BorderPane>

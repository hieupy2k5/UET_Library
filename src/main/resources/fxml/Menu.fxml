<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.uet_library.Controllers.MenuController">
  <left>
    <VBox alignment="TOP_CENTER" nodeOrientation="LEFT_TO_RIGHT" prefHeight="200.0" style="-fx-background-color: #404040;" BorderPane.alignment="CENTER">
      <children>
        <ImageView fitHeight="200.0" fitWidth="1.0" pickOnBounds="true">
<!--          <image>-->
<!--            <Image url="@blah1.png" />-->
<!--          </image>-->
          <VBox.margin>
            <Insets bottom="100.0" />
          </VBox.margin>
        </ImageView>
        <Button fx:id="button_Home" mnemonicParsing="false" onAction="#loadHomeView" prefHeight="50.0" prefWidth="200.0" style="-fx-text-fill: #f0f0f0; ;" styleClass="bt" stylesheets="@../Styles/main.css" text="Home" textAlignment="JUSTIFY">
          <opaqueInsets>
            <Insets />
          </opaqueInsets>
          <cursor>
            <Cursor fx:constant="HAND" />
          </cursor>
          <font>
            <Font name="System Bold" size="17.0" />
          </font>
        </Button>
        <Button fx:id="button_Users" mnemonicParsing="false" onAction="#loadUsersView" prefHeight="50.0" prefWidth="200.0" style="-fx-text-fill: #f0f0f0;" styleClass="bt" stylesheets="@../Styles/main.css" text="Users" textAlignment="JUSTIFY">
          <cursor>
            <Cursor fx:constant="HAND" />
          </cursor>
          <font>
            <Font name="System Bold" size="17.0" />
          </font>
        </Button>
        <Button fx:id="button_Documents" mnemonicParsing="false" onAction="#loadDocumentsView" prefHeight="50.0" prefWidth="200.0" style="-fx-text-fill: #f0f0f0;" styleClass="bt" stylesheets="@../Styles/main.css" text="Documents" textAlignment="JUSTIFY">
          <cursor>
            <Cursor fx:constant="HAND" />
          </cursor>
          <font>
            <Font name="System Bold" size="17.0" />
          </font>
        </Button>
        <Button fx:id="button_BorrowDocument" mnemonicParsing="false" onAction="#loadBorrowDocumentsView" prefHeight="50.0" prefWidth="200.0" style="-fx-text-fill: #f0f0f0;" styleClass="bt" stylesheets="@../Styles/main.css" text="Borrow Documents" textAlignment="JUSTIFY">
          <cursor>
            <Cursor fx:constant="HAND" />
          </cursor>
          <font>
            <Font name="System Bold" size="17.0" />
          </font>
        </Button>
      </children>
    </VBox>
  </left>
  <top>
    <HBox alignment="CENTER_RIGHT" prefHeight="50.0" style="-fx-background-color: #2b2a26;" BorderPane.alignment="TOP_RIGHT">
      <children>
        <Label fx:id="welcomeText" text="Welcome!" textFill="WHITE">
               <padding>
                  <Insets left="15.0" />
               </padding></Label>
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="button_LogOut" mnemonicParsing="false" onAction="#handleLogOut" prefHeight="40.0" prefWidth="107.0" style="-fx-text-fill: #f0f0f0;" styleClass="bt" stylesheets="@../Styles/main.css" text="Log Out" textAlignment="JUSTIFY">
          <cursor>
            <Cursor fx:constant="HAND" />
          </cursor>
          <font>
            <Font name="System Bold" size="16.0" />
          </font>
        </Button>
      </children>
    </HBox>
  </top>
  <center>
    <AnchorPane fx:id="contentPane" prefHeight="800.0" prefWidth="980.0" BorderPane.alignment="CENTER" />
  </center>
</BorderPane>
